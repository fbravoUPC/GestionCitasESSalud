<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuCitas"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/degradado_fondo"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/degradado_fondo"
                android:orientation="vertical"
               >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/personv2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/EntradaUserCitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buenas noches, Jose Tello"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:id="@+id/DNIUserCitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="443322467"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/EdadUserCitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"/>
            </LinearLayout>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="99dp"
            android:layout_marginLeft="290dp"

            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/degradado_fondo"
                    android:src="@drawable/fondotop" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#4F9ECF"
    >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha=".47"
            android:gravity="fill_vertical"
            android:src="@drawable/citas"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SOLICITUD DE CITAS"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:textStyle="bold"
            android:fontFamily="monospace"
           />
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="fill_vertical"
                    android:src="@drawable/ginecologia"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:id="@+id/btn_ginecologia"
                    android:text="Ginecologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColor="#8190A5"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:gravity="fill_vertical"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:gravity="fill_vertical"
                    android:src="@drawable/mamografia"/>
                <Button
                    android:id="@+id/btn_mamografia"
                    android:text="Mamografia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColor="#8190A5"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:gravity="fill_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="fill_vertical"
                    android:src="@drawable/patologia"/>
                <Button
                    android:id="@+id/btn_patologia"
                    android:text="Patologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColor="#8190A5"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:gravity="fill_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:gravity="fill_vertical"
                    android:src="@drawable/consultageneral"/>
                <Button
                    android:id="@+id/btn_consulta_general"
                    android:text="Consulta General"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:textColor="#8190A5"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:gravity="fill_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="210dp"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="85dp"
            android:alpha="0.08"
            >
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:layout_gravity="center"

                >
                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:src="@drawable/unidos"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>