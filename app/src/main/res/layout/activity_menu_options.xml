<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOptions"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3000dp"
            android:background="@drawable/degradado_fondo"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:alpha=".27"
                android:src="@drawable/fondotop" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/personv2" />
            <TextView
                android:id="@+id/Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/NombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido Jose Tello"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/DNIusuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="443322467"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textAllCaps="false"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="430dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp">

            <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha=".47"
                        android:gravity="fill_vertical"
                        android:src="@drawable/citas"
                        android:layout_gravity="center_vertical"/>
                    <Button
                        android:id="@+id/btn_cita"
                        android:text="Citas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#8190A5"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:gravity="fill_vertical"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha=".47"
                        android:gravity="fill_vertical"
                        android:src="@drawable/consultar"/>
                    <Button
                        android:id="@+id/btn_consultar"
                        android:text="Consultar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#8190A5"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:gravity="fill_vertical"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="fill_vertical"
                        android:src="@drawable/iconperfil"/>
                    <Button
                        android:id="@+id/btn_perfil"
                        android:text="Perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#8190A5"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:gravity="fill_vertical"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:alpha=".47"
                        android:gravity="fill_vertical"
                        android:src="@drawable/seguridad"/>
                    <Button
                        android:id="@+id/btn_seguridad"
                        android:text="Seguridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#8190A5"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:gravity="fill_vertical"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:alpha=".47"
                        android:gravity="fill_vertical"
                        android:src="@drawable/consultar"/>
                    <Button
                        android:id="@+id/btn_contactenos"
                        android:text="Contactenos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#8190A5"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="monospace"
                        android:textAllCaps="false"
                        android:gravity="fill_vertical"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="210dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="85dp"
            android:alpha="0.08"
            >
            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:layout_gravity="center"

                >
                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="210dp"

                    android:src="@drawable/unidos"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>
