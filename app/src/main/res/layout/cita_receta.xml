<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MenuModelo"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/degradado_fondo"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="@drawable/degradado_fondo"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/personv2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buenas noches, Jose Tello"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_marginTop="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="443322467"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="39 aÃ±os"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:textAllCaps="false"/>
            </LinearLayout>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="99dp"
            android:layout_marginLeft="290dp"

            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/degradado_fondo"
                    android:src="@drawable/fondotop" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="159dp"
                        android:layout_height="match_parent"
                        android:text="area" />

                    <TextView
                        android:id="@+id/txtArea"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:text="fecha" />

                    <TextView
                        android:id="@+id/txtFechaCita"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:text="estado" />

                    <TextView
                        android:id="@+id/txtEstadoCita"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="doctor"
                        />

                    <TextView
                        android:id="@+id/txtDoctor"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="diagnostico"

                        />

                    <TextView
                        android:id="@+id/txtDiagnostico"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:text="indicaciones" />

                    <TextView
                        android:id="@+id/txtIndicaciones"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button19"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="receta" />

                    <TextView
                        android:id="@+id/txtReceta"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:text="hello"
                        android:paddingTop="15dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:background="#ffffff"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="32dp"
            android:drawableStart="@drawable/ic_home"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="volver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="32dp"
            android:drawableStart="@drawable/ic_eliminar"
            android:drawablePadding="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="eliminar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>


